<h1>Listing albums</h1>

<table>
  <thead>
    <tr>
      <th>Origin url</th>
      <th>Singer</th>
      <th>Album title</th>
      <th>Song title</th>
      <th>Content</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.origin_url %></td>
        <td><%= album.singer %></td>
        <td><%= album.album_title %></td>
        <td><%= album.song_title %></td>
        <td><%= album.content %></td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

